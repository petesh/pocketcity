
#include "simcity.h"


FORM ID formID_pocketCity AT ( 0 0 160 160 )
NOFRAME
USABLE
MENUID menuID_pocketCity
BEGIN
    TITLE "Pocket City"
END

VERSION 1 "0.12"
ICONFAMILY "graphic/pcity.bmp" "" "" "graphic/pcity-color.bmp"
SMALLICONFAMILY "graphic/pcitysmall.bmp" "" "" "graphic/pcitysmall-color.bmp"

MENU ID menuID_pocketCity
BEGIN
  PULLDOWN "Game"
  BEGIN
    MENUITEM "New/Load..."                      menuitemID_loadGame
	MENUITEM "Save"                             menuitemID_saveGame
	MENUITEM "Budget"                           menuitemID_Budget
	MENUITEM "Map"                              menuitemID_Map
	MENUITEM SEPARATOR
	MENUITEM "About"                            menuitemID_about
	MENUITEM "Test"                             menuitemID_Funny
  END
  PULLDOWN "Build"
  BEGIN
	MENUITEM "Remove defence"               menuitemID_removeDefence
	MENUITEM "List..."                      menuitemID_buildExtra "i"
  END
  PULLDOWN "Speed"
  BEGIN
	MENUITEM "Slow"                         menuID_SlowSpeed
	MENUITEM "Medium"                       menuID_MediumSpeed
	MENUITEM "Fast"                         menuID_FastSpeed
	MENUITEM "Turbo"                        menuID_TurboSpeed
	MENUITEM SEPARATOR
	MENUITEM "Pause"                        menuID_PauseSpeed
  END
END

FORM ID formID_budget AT ( 0 0 160 160 )
NOFRAME
USABLE
MENUID menuID_budget
BEGIN
    TITLE "Budget"
    LABEL "Income" AUTOID AT (CENTER 16)
    LABEL "Residential" AUTOID AT (0 PrevBottom)
    LABEL "-" labelID_budget_res AT (115 PrevTop)
    LABEL "Commercial" AUTOID AT (0 PrevBottom)
    LABEL "-" labelID_budget_com AT (115 PrevTop)
    LABEL "Industrial" AUTOID AT (0 PrevBottom)
    LABEL "-" labelID_budget_ind AT (115 PrevTop)


    LABEL "Expenses" AUTOID AT (CENTER PrevBottom)
    
    LABEL "Traffic" AUTOID AT (0 PrevBottom)
    FIELD ID fieldID_budget_tra AT (60 prevtop 20 auto) 
        EDITABLE UNDERLINED MAXCHARS 3 NUMERIC RIGHTALIGN
    LABEL "%" AUTOID AT (prevright prevtop)
    LABEL "-" labelID_budget_tra AT (115 PrevTop)
    
    LABEL "Power" AUTOID AT (0 PrevBottom)
    FIELD ID fieldID_budget_pow AT (60 prevtop 20 auto) 
        EDITABLE UNDERLINED MAXCHARS 3 NUMERIC RIGHTALIGN
    LABEL "%" AUTOID AT (prevright prevtop)
    LABEL "-" labelID_budget_pow AT (115 PrevTop)
    
    LABEL "Defense" AUTOID AT (0 PrevBottom)
    FIELD ID fieldID_budget_def AT (60 prevtop 20 auto) 
        EDITABLE UNDERLINED MAXCHARS 3 NUMERIC RIGHTALIGN
    LABEL "%" AUTOID AT (prevright prevtop)
    LABEL "-" labelID_budget_def AT (115 PrevTop)


    LABEL "Total" AUTOID AT (CENTER PrevBottom)
    LABEL "Current balance" AUTOID AT (0 PrevBottom)
    LABEL "-" labelID_budget_now AT (115 PrevTop)
    LABEL "Change" AUTOID AT (0 PrevBottom)
    LABEL "-" labelID_budget_tot AT (115 PrevTop)
    LABEL "Next month's balance" AUTOID AT (0 PrevBottom)
    LABEL "-" labelID_budget_bal AT (115 PrevTop)
    LABEL "" AUTOID AT (0 PrevBottom)

    POPUPTRIGGER "Budget" ID listID_shifter_popup AT (100 1 auto auto) LEFTANCHOR
    LIST 
        "Budget" "Map" "Options"
        ID listID_shifter AT (PrevLeft PrevTop 52 1) NONUSABLE VISIBLEITEMS 3
    POPUPLIST ID listID_shifter_popup listID_shifter
    
END

MENU ID menuID_budget
BEGIN
  PULLDOWN "Budget"
  BEGIN
	MENUITEM "Back"                        menuitemID_BudgetBack
  END
END

FORM ID formID_options AT ( 0 0 160 160 )
NOFRAME
USABLE
BEGIN
    TITLE "Options"
    /* disasters - some people wants to adjust the frequency :/ */
    LABEL "Disasters" AUTOID AT (0 18)
    PUSHBUTTON "Off" ID buttonID_dis_off   AT (80 prevtop auto auto) GROUP 1
    PUSHBUTTON "I"   ID buttonID_dis_one   AT (prevright prevtop auto auto) GROUP 1
    PUSHBUTTON "II"  ID buttonID_dis_two   AT (prevright prevtop auto auto) GROUP 1
    PUSHBUTTON "III" ID buttonID_dis_three AT (prevright prevtop auto auto) GROUP 1


    /* formchangers (shapeshifters?) */
    POPUPTRIGGER "Options" ID listID_shifter_popup AT (100 1 auto auto) LEFTANCHOR
    LIST 
        "Budget" "Map" "Options"
        ID listID_shifter AT (PrevLeft PrevTop 52 1) NONUSABLE VISIBLEITEMS 3
    POPUPLIST ID listID_shifter_popup listID_shifter
END


FORM ID formID_map AT ( 0 0 160 160 )
NOFRAME
USABLE
MENUID menuID_map
BEGIN
    /* The map doesnt have a control for the map itself
     * it is drawn directly onto the screen in map.c 
     */
    
    TITLE "Map"
    
    /* formchangers (shapeshifters?) */
    POPUPTRIGGER "Map" ID listID_shifter_popup AT (100 1 auto auto) LEFTANCHOR
    LIST
        "Budget" "Map" "Options"
        ID listID_shifter AT (PrevLeft PrevTop 52 1) NONUSABLE VISIBLEITEMS 3
    POPUPLIST ID listID_shifter_popup listID_shifter
END

MENU ID menuID_map
BEGIN
  PULLDOWN "Map"
  BEGIN
	MENUITEM "Back"                        menuitemID_MapBack
  END
END


FORM ID formID_files AT ( 0 0 160 160 )
